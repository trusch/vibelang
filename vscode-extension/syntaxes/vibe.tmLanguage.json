{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vibelang",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#support"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vibe",
          "match": "\\b(if|else|for|in|loop|while|do|until|return|break|continue|import)\\b"
        },
        {
          "name": "storage.type.vibe",
          "match": "\\b(let|const|fn)\\b"
        },
        {
          "name": "keyword.operator.new.vibe",
          "match": "\\b(new)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.vibe",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.vibe",
              "match": "\\\\."
            }
          ]
        },
        {
          "begin": "`",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.vibe" }
          },
          "end": "`",
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.vibe" }
          },
          "name": "string.template.vibe",
          "patterns": [
            {
              "match": "\\\\`",
              "name": "constant.character.escape.vibe"
            },
            {
              "match": "\\\\.",
              "name": "constant.character.escape.vibe"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.vibe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.vibe",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.float.vibe",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.vibe",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.language.boolean.vibe",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.vibe",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "support": {
      "patterns": [
        {
          "name": "support.function.vibe",
          "match": "\\b(define_synthdef|define_fx|define_group|pattern|melody|sequence|voice|sample|load_sfz|group|fx|fade|set_tempo|set_quantization|set_time_signature|sin_ar|saw_ar|pulse_ar|tri_ar|noise_ar|lpf_ar|hpf_ar|bpf_ar|env_perc|env_adsr|db|note|bars)\\b"
        },
        {
          "name": "support.type.vibe",
          "match": "\\b(float|int|string|bool)\\b"
        }
      ]
    }
  },
  "scopeName": "source.vibe"
}

