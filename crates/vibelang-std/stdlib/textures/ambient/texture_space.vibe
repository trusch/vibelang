// Genre: Ambient, Sci-Fi | Character: Spacious, ethereal texture
define_synthdef("texture_space", |builder| {
    builder
        .param("freq", 110.0)
        .param("amp", 0.35)
        .body(|freq, amp| {
            // Very long envelope
            let env = envelope()
                .perc(2.0, 12.0)
                .cleanup_on_finish()
                .build();

            // Multiple slow oscillators
            let osc1 = sin_osc_ar(freq * 0.5);
            let osc2 = sin_osc_ar(freq * 0.75);
            let osc3 = sin_osc_ar(freq);
            let osc4 = sin_osc_ar(freq * 1.5);

            // Mix with harmonics
            let mix = (osc1 * 0.3 + osc2 * 0.25 + osc3 * 0.25 + osc4 * 0.2);

            // Evolving filter
            let filter_env = envelope()
                .perc(3.0, 10.0)
                .build();
            let mod_cutoff = 500.0 + (filter_env * 2500.0);

            let filtered = lpf_ar(mix, mod_cutoff);

            filtered * env * amp
        })
});

