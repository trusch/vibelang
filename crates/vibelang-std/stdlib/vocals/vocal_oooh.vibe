// Genre: Ambient, R&B | Character: "Oooh" choir voice
define_synthdef("vocal_oooh")
    .param("freq", 220.0)
    .param("amp", 0.55)
    .param("gate", 1.0)
    .body(|freq, amp, gate| {
        let env = envelope()
            .asr(0.2, 1.0, 0.25)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Vibrato
        let vib = sin_osc_ar(5.5) * freq * 0.008;

        // Vocal source
        let source = saw_ar(freq + vib) * 0.4;

        // "Oooh" formants (lower formants)
        let f1 = bpf_ar(source, 350.0, 0.1) * 0.5;
        let f2 = bpf_ar(source, 700.0, 0.12) * 0.3;
        let f3 = bpf_ar(source, 2200.0, 0.2) * 0.1;

        let sig = f1 + f2 + f3;

        sig * env * amp
    });
