// Utility: Silent placeholder for routing

// Silence - Output nothing (useful for bus routing setup)
define_synthdef("silence")
    .param("amp", 0.0)
    .param("gate", 1.0)
    .body(|amp, gate| {
        let env = envelope()
            .asr(0.0, 1.0, 0.0)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        dc_ar(0.0) * env * amp
    });
