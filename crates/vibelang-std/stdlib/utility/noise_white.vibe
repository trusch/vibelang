// Utility: Pure white noise generator
define_synthdef("noise_white")
    .param("amp", 0.5)
    .param("gate", 1.0)
    .body(|amp, gate| {
        let env = envelope()
            .asr(0.01, 1.0, 0.01)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        white_noise_ar() * env * amp
    });
