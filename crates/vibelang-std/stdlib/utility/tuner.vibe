// Utility: Tuning reference tones

// A440 - Standard concert pitch
define_synthdef("tuner_a440")
    .param("amp", 0.3)
    .param("gate", 1.0)
    .body(|amp, gate| {
        let env = envelope()
            .asr(0.01, 1.0, 0.01)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        sin_osc_ar(440.0) * env * amp
    });

