// Genre: Cinematic, Orchestral | Character: Crash with dynamic swell
define_synthdef("crash_swell", |builder| {
    builder
        .param("amp", 0.7)
        .body(|amp| {
            // Build and decay envelope
            let env = envelope()
                .perc(0.3, 2.8)
                .cleanup_on_finish()
                .build();

            // Metallic frequencies
            let metal1 = saw_ar(456.0) * 0.18;
            let metal2 = saw_ar(712.0) * 0.17;
            let metal3 = saw_ar(1089.0) * 0.16;
            let metal4 = saw_ar(1645.0) * 0.15;
            let metal5 = saw_ar(2387.0) * 0.13;
            let metal6 = saw_ar(3289.0) * 0.11;

            let metallic = metal1 + metal2 + metal3 + metal4 + metal5 + metal6;

            // Dynamic filter for swell
            let filter_env = envelope()
                .perc(0.5, 2.5)
                .build();
            let mod_cutoff = 800.0 + (filter_env * 4500.0);

            let filtered = lpf_ar(metallic, mod_cutoff);

            // Noise layer
            let noise = pink_noise_ar();
            let filtered_noise = hpf_ar(noise, 2000.0) * 0.2;

            (filtered + filtered_noise) * env * amp
        })
});

