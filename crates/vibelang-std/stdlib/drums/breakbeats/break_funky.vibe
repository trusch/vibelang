// Genre: Funk, Hip-hop | Character: Funky Drummer-style kit sound
define_synthdef("break_funky")
    .param("freq", 190.0)
    .param("amp", 0.85)
    .param("type", 0.0) // 0=kick, 0.5=snare, 1.0=hat
    .body(|freq, amp, type_param| {
        let gate = dc_ar(1.0);

        // Tight decay
        let decay = 0.25 - type_param * 0.1;
        let amp_env = envelope()
            .perc(0.001, 1.0)
            .gate(gate)
            .time_scale(decay)
            .cleanup_on_finish()
            .build();

        // Kick
        let kick_amount = 1.0 - type_param;
        let kick_penv = envelope()
            .perc(0.001, 0.035)
            .gate(gate)
            .build();
        let kick = sin_osc_ar(55.0 + kick_penv * 150.0) * kick_amount * 0.65;

        // Snare (funky, tight)
        let snare_amount = 1.0 - (type_param - 0.5).abs() * 2.0;
        let snare_body = sin_osc_ar(freq) * snare_amount * 0.3;
        let snare_nenv = envelope()
            .perc(0.001, 0.12)
            .gate(gate)
            .build();
        let snare_noise = bpf_ar(white_noise_ar(), 4000.0, 0.5) * snare_nenv * snare_amount * 0.4;

        // Hat (crisp)
        let hat = hpf_ar(white_noise_ar(), 9000.0) * type_param * 0.35;

        (kick + snare_body + snare_noise + hat) * amp_env * amp
    });
