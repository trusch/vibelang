// Genre: Jazz, Acoustic | Character: Brush snare with swishing texture
define_synthdef("snare_brush")
    .param("freq", 180.0)
    .param("amp", 0.6)
    .body(|freq, amp| {
        let gate = dc_ar(1.0);

        // Soft decay
        let amp_env = envelope()
            .perc(0.005, 0.25)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Subtle body
        let pitch_env = envelope()
            .perc(0.001, 0.02)
            .gate(gate)
            .build();
        let body = sin_osc_ar(freq + pitch_env * freq * 1.0) * 0.25;

        // Brush swish texture
        let swish_env = envelope()
            .perc(0.01, 0.2)
            .gate(gate)
            .build();
        let swish = bpf_ar(pink_noise_ar(), 4000.0, 0.6) * swish_env * 0.5;

        // Wire buzz
        let wire_env = envelope()
            .perc(0.005, 0.15)
            .gate(gate)
            .build();
        let wires = hpf_ar(white_noise_ar(), 5000.0) * wire_env * 0.2;

        (body + swish + wires) * amp_env * amp
    });
