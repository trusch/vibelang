// Genre: Industrial, Hardcore | Character: Heavy distortion, aggressive
define_synthdef("kick_distorted", |builder| {
    builder
        .param("freq", 58.0)
        .param("amp", 1.0)
        .param("drive", 2.5)
        .body(|freq, amp, drive| {
            // Punchy envelope
            let amp_env = envelope()
                .perc(0.001, 0.28)
                .cleanup_on_finish()
                .build();

            // Aggressive pitch sweep
            let pitch_env = envelope()
                .perc(0.001, 0.04)
                .build();
            let freq_mod = pitch_env * freq * 3.5;

            // Main tone with overdrive
            let sig = sin_osc_ar(freq + freq_mod) * drive;

            // Hard clipping for distortion
            let distorted = clip(sig, -0.6, 0.6);

            // Add harmonics through filtering
            let filtered = lpf_ar(distorted, 2000.0);

            // Heavy click/noise
            let click_env = envelope()
                .perc(0.0001, 0.015)
                .build();
            let click = white_noise_ar() * click_env * 0.3;

            (filtered + click) * amp_env * amp * 0.6
        })
});

