// Genre: 90s Hip-hop, Boom Bap | Character: E-mu SP-1200 kick - crunchy, 12-bit warmth
define_synthdef("sp1200_kick")
    .param("freq", 48.0)
    .param("amp", 1.0)
    .body(|freq, amp| {
        let gate = dc_ar(1.0);

        // Punchy decay
        let amp_env = envelope()
            .perc(0.001, 0.4)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Pitch envelope
        let pitch_env = envelope()
            .perc(0.001, 0.07)
            .gate(gate)
            .build();
        let freq_mod = pitch_env * freq * 3.5;

        // Main body with slight saturation (12-bit character)
        let raw = sin_osc_ar(freq + freq_mod);
        let body = (raw * 1.2).tanh() * 0.8;

        // Sub layer
        let sub = sin_osc_ar((freq + freq_mod) * 0.5) * 0.15;

        // Crunchy click
        let click_env = envelope()
            .perc(0.0001, 0.012)
            .gate(gate)
            .build();
        let click = lpf_ar(white_noise_ar(), 3000.0) * click_env * 0.2;

        (body + sub + click) * amp_env * amp
    });
