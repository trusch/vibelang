// Genre: Vintage, New Wave, Synthpop | Character: Roland CR-78 kick - warm, muted analog
define_synthdef("cr78_kick")
    .param("freq", 50.0)
    .param("amp", 1.0)
    .body(|freq, amp| {
        let gate = dc_ar(1.0);

        // Soft, warm decay
        let amp_env = envelope()
            .perc(0.002, 0.3)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Gentle pitch sweep
        let pitch_env = envelope()
            .perc(0.001, 0.05)
            .gate(gate)
            .build();
        let freq_mod = pitch_env * freq * 2.5;

        // Warm sine body
        let body = sin_osc_ar(freq + freq_mod);

        // Soft attack
        let attack_env = envelope()
            .perc(0.001, 0.015)
            .gate(gate)
            .build();
        let attack = lpf_ar(white_noise_ar(), 1000.0) * attack_env * 0.1;

        (body + attack) * amp_env * amp
    });
