// Genre: Brazilian, Samba, Choro | Character: Brazilian tambourine with jingles
define_synthdef("pandeiro")
    .param("freq", 300.0)
    .param("amp", 0.7)
    .body(|freq, amp| {
        let gate = dc_ar(1.0);

        // Medium decay
        let amp_env = envelope()
            .perc(0.001, 0.2)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Drum body
        let pitch_env = envelope()
            .perc(0.001, 0.02)
            .gate(gate)
            .build();
        let body = sin_osc_ar(freq + pitch_env * freq) * 0.4;

        // Jingles (high metallic)
        let jingle_env = envelope()
            .perc(0.001, 0.15)
            .gate(gate)
            .build();
        let jingles = hpf_ar(white_noise_ar(), 6000.0) * jingle_env * 0.35;

        // Attack transient
        let attack_env = envelope()
            .perc(0.0001, 0.005)
            .gate(gate)
            .build();
        let attack = white_noise_ar() * attack_env * 0.2;

        (body + jingles + attack) * amp_env * amp
    });
