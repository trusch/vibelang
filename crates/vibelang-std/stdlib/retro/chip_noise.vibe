// Genre: Chiptune, 8-bit | Character: Chip noise channel for drums/sfx
define_synthdef("chip_noise")
    .param("freq", 8000.0)
    .param("amp", 0.5)
    .body(|freq, amp| {
        let amp_env = envelope()
            .perc(0.001, 0.15)
            .cleanup_on_finish()
            .build();

        // Filtered noise (simulating chip noise)
        let noise = hpf_ar(white_noise_ar(), freq);

        noise * amp_env * amp
    });
