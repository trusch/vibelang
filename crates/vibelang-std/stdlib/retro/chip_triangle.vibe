// Genre: Chiptune, 8-bit | Character: NES-style triangle wave bass
define_synthdef("chip_triangle")
    .param("freq", 110.0)
    .param("amp", 0.7)
    .param("gate", 1.0)
    .body(|freq, amp, gate| {
        let envelope = env_asr(0.001, 1.0, 0.01);
        let env = NewEnvGenBuilder(envelope, gate)
            .with_done_action(2.0)
            .build();

        // Pure triangle wave
        let osc = lf_tri_ar(freq);

        osc * env * amp
    });
