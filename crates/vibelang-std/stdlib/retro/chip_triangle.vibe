// Genre: Chiptune, 8-bit | Character: NES-style triangle wave bass
define_synthdef("chip_triangle")
    .param("freq", 110.0)
    .param("amp", 0.7)
    .param("gate", 1.0)
    .body(|freq, amp, gate| {
        let env = envelope()
            .asr(0.001, 1.0, 0.01)
            .gate(gate)
            .cleanup_on_finish()
            .build();

        // Pure triangle wave
        let osc = lf_tri_ar(freq);

        osc * env * amp
    });
